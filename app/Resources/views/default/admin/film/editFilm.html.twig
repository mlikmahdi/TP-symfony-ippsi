{% extends 'base.html.twig' %}

{% block title %}Modifier {{ film.name }}{% endblock %}

{% block body %}

    {{ form_start(form) }}
        <h1>Modifier {{ film.name }}</h1>
        <hr>
        <a class="btn btn-light" href="{{ path('adminHome') }}">Dashboard</a>
        <hr>
        <div role="alert">
            {{ form_errors(form, { 'attr': {'class': 'alert alert-danger mb-3'} }) }}
        </div>

        <form action="{{ path('films_add') }}" method="post">
            {{ form_widget(form.name, { 'attr': {'class': 'form-control mb-3','placeholder': 'Nom'} }) }}
            {{ form_widget(form.description, { 'attr': {'class': 'form-control mb-3','placeholder': 'Description'} }) }}
            {{ form_widget(form.image, { 'attr': {'class': 'form-control mb-3','placeholder': 'Image'} }) }}
            {{ form_widget(form.video, { 'attr': {'class': 'form-control mb-3','placeholder': 'Video'} }) }}
            {{ form_widget(form.category, { 'attr': {'class': 'form-control mb-3','placeholder': 'Cat√©gorie'} }) }}
            {{ form_rest(form) }}
            <button class="btn btn-lg btn-danger btn-block" type="submit">Enregistrer les modifications</button>
            <a href="{{ path('film_delete', { 'id' : film.id }) }}"
               class="btn btn-lg btn-danger btn-block">Supprimer {{ film.name }}</a>
        </form>

    {{ form_end(form) }}

{% endblock %}
