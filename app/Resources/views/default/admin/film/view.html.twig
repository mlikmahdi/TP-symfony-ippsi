{% extends 'base.html.twig' %}
{% block title %}{{ film.name }}{% endblock %}
{% block body %}

    <h1 class="center text-danger">{{ film.name }}</h1>

    <a class="btn btn-light mb-3" href="{{ path('filmsAdmin_list') }}">Retour</a>
    <a class="btn btn-light mb-3" href="{{ path('adminHome') }}">Dashboard</a>
    <a class="btn btn-warning mb-3" href="{{ path('film_edit', {'id' : film.id}) }}">Modifier</a>
    <hr>
    <div class="row mb-3">
        <div class="col-md-3">
            <img class="img-thumbnail mx-auto d-block" src="{{ asset('uploads/images/' ~ film.image) }}"
                 alt="{{ film.name }}">
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    Synopsis
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>{{ film.description }}</p>
                        <footer class="blockquote-footer">
                            <small>
                                <a class="btn btn-default btn-sm"
                                   href="{{ path('category_view', { 'id' : film.category.id }) }}">{{ film.category.name }}</a>
                            </small>
                        </footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <h3 class="center mt-5 mb-5">voir le film</h3>
    <video class="mx-auto d-block" controls preload="auto">
        <source src="{{ asset('uploads/videos/' ~ film.video) }}" type="video/mp4">
        <source src="{{ asset('uploads/videos/' ~ film.video) }}" type="video/webm">
    </video>
    
{% endblock %}
