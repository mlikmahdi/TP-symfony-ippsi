{% extends 'base.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
    <a href="{{ path('adminHome') }}" class="btn btn-default">Retour sur tableau de bord</a>
    <h1>Films</h1>
    <hr>
    <div class="row">
        {% for film in films %}
            <div class="col-sm-6 col-md-4">
                <div class="card mb-3" style="width: 18rem;">
                    {#{{ film.image }}#}
                    <img class="card-img-top" src="http://via.placeholder.com/400x200" alt="{{ film.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ film.name }}</h5>
                        <p class="card-text">{{ film.description }}</p>
                        <a href="{{ path('filmAdmin_view', {'id' : film.id}) }}" class="btn btn-default">DÃ©tails du film</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
