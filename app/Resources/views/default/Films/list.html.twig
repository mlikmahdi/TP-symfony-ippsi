{% extends 'base.html.twig' %}
{% block title %}Les Films{% endblock %}
{% block body %}
    <div class="row">
        {% for film in films %}
            <div class="col-sm-6 col-md-4">
                <div class="card mb-3" style="width: 18rem;">
                    <img class="card-img-top" src="http://via.placeholder.com/400x200" alt="{{ film.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ film.name }}</h5>
                        <p class="card-text">{{ film.description }}</p>
                        <a href="{{ path('film_view', {'id' : film.id}) }}" class="btn btn-default">DÃ©tails</a>
                        <a href="{{ path('category_view', { 'id' : film.category.id }) }}" class="btn btn-default">{{ film.category.name }}</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
