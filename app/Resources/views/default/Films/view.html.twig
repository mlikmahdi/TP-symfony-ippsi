{% extends 'base.html.twig' %}
{% block title %}{{ film.name }}{% endblock %}
{% block body %}

    <h1 class="center text-danger">{{ film.name }}</h1>

    <a class="btn btn-light mb-3"  href="{{ path('films_list') }}">Tous les films</a>
    <div class="card mb-3">
        {# {{ film.image }} #}
        <img class="card-img-top" src="{{ asset('uploads/images/' ~ film.image) }}" alt="{{ film.name }}">
        <div class="card-body">
            <p class="card-text center">{{ film.description }}</p>
            <a href="{{ path('category_view', { 'id' : film.category.id }) }}">{{ film.category.name }}</a>
        </div>
        <video controls preload="auto" width="640" height="264">
            <source src="{{ asset('uploads/videos/' ~ film.video) }}" type="video/mp4" >
            <source src="{{ asset('uploads/videos/' ~ film.video) }}" type="video/webm" >
        </video>
    </div>


{% endblock %}
