{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}">
    <link rel="stylesheet" href="{{ asset('css/signin.css') }}">
{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey }}</div>
    {% endif %}

    <form class="form-signin" action="{{ path('login') }}" method="post">
        <img class="mb-4" src="{{ asset('img/netflix-logo.png') }}" alt="" width="100%" height="72">
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="email" name="_username" id="inputEmail" class="form-control" placeholder="Email" required=""
               autofocus="">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Mot de Passe"
               required="">
        <button class="btn btn-lg btn-danger btn-block" type="submit">Connexion</button>
        <a class="btn btn-lg btn-link btn-block" href="{{ path('user_registration') }}">S'inscrire</a>
    </form>

{% endblock %}


