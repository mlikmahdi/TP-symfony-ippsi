{% extends 'base.html.twig' %}
{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>
    <hr>
    <div class="row">
        {% for category in categories %}
            <div class="col-md-4 col-sm-6 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title">{{ category.name }}</h3>

                        <p class="card-text">
                            <small class="text-muted">
                                <a class="btn btn- btn-sm mb-3"
                                   href="{{ path('category_view', {'id' : category.id}) }}">Voir la
                                    catégorie {{ category.name }}</a>
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}