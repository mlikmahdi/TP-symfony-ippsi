{% extends 'base.html.twig' %}

{% block body %}

    <head>
        <title>{{ film.name }}</title>
    </head>
    <body>
        <h3>{{ film.name }}</h3>
        <p>{{ film.description }}</p>
        <img> {{ film.image }} </img>
        <br>
        <a href="{{ path('films_list') }}">Liste des films</a>
        <a href="{{ path('category_view', { 'id' : film.category.id }) }}">{{ film.category.name }}</a>
    </body>

{% endblock %}
